.main__form
  .title
    new post
  = form_for @post, html:{class: "message-form"} do |f|
    .input-box
      = f.text_field :title, class:"text", placeholder: 'type a title'
      = f.label :image, class: "input-box__label" do
        =icon('fas', 'image')
      = f.file_field :image, class: 'input-box__label-file'
    = f.collection_check_boxes :category_ids, Category.all, :id, :name
    = f.submit'Send', class: 'submit-btn'
